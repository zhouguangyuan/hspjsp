	//验证用户是否合法
	public Users checkUser(Users user){
		//到数据库去验证
		String sql="seclect * from users where id=? and pwd=?";
		String paras[] = {user.getId()+"", user.getPassword()};
		
		ArrayList al = new SqlHelper().executeQuery(sql, paras);
		if(al.size()==0){
			return null;
		}else{
			Object 
		}
		return true;
	}

}
